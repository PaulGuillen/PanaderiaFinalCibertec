<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:contentPadding="5dp"
        app:cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_imagen_cafeteria"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY">

            </ImageView>

            <TextView
                android:id="@+id/tv_titulo_cafeteria"
                android:layout_width="wrap_content"
                android:paddingStart="7dp"
                android:layout_gravity="center"
                android:paddingEnd="7dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textStyle="bold"
                android:hint="Titulo"
                android:textColor="@color/grey_primary"
                android:textSize="15sp"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/tv_descripcion_cafeteria"
                android:layout_width="0dp"
                android:layout_height="0dp">
            </TextView>

            <TextView
                android:id="@+id/tv_precio_cafeteria"
                android:layout_width="0dp"
                android:layout_height="0dp">
            </TextView>

            <TextView
                android:id="@+id/tv_estado_cafeteria"
                android:layout_width="0dp"
                android:layout_height="0dp">
            </TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>